{
    "name": "vscode-java-test",
    "displayName": "vscode-java-test",
    "description": "A Java Test Runner/Debugger for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "xuanz",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:java",
        "onCommand:java.run.test",
        "onCommand:java.debug.test"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "javaExtensions": [
            "./server/java.junit.plugin-0.1.0.jar"
        ],
        "configuration": {
            "type": "object",
            "title": "Java configuration",
            "properties": {
                "java.runTestsCodeLens.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable the run test code lens."
                },
                "java.debugTestsCodeLens.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable the debug test code lens."
                }
            }
        },
        "commands": [
            {
              "command": "test.explorer.refresh",
              "title": "Refresh",
              "icon": {
                "light": "resources/light/refresh.svg",
                "dark": "resources/dark/refresh.svg"
              }
            },
            {
              "command": "test.explorer.java.run.test",
              "title": "Run Test",
              "icon": {
                "light": "resources/light/run.png",
                "dark": "resources/dark/run.png"
              }
            },
            {
              "command": "test.explorer.java.debug.test",
              "title": "Debug Test",
              "icon": {
                "light": "resources/light/debug.png",
                "dark": "resources/dark/debug.png"
              }
            },
            {
              "command": "test.explorer.java.run.all",
              "title": "Run All",
              "icon": {
                "light": "resources/light/run.png",
                "dark": "resources/dark/run.png"
              }
            }
          ],
          "views": {
            "explorer": [
              {
                "id": "testExplorer",
                "name": "Test Explorer",
                "when": "resourceLangId == 'java'"
              }
            ]
          },
          "menus": {
            "view/title": [
              {
                "command": "test.explorer.refresh",
                "when": "view == testExplorer",
                "group": "navigation@1"
              },
              {
                "command": "test.explorer.java.run.all",
                "when": "view == testExplorer",
                "group": "navigation@0"
              }
            ],
            "view/item/context": [
              {
                "command": "test.explorer.java.run.test",
                "when": "view == testExplorer",
                "group": "testExplorer@0"
              },
              {
                "command": "test.explorer.java.debug.test",
                "when": "view == testExplorer",
                "group": "testExplorer@1"
              }
            ]
          }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "extensionDependencies": [
        "vscjava.vscode-java-debug"
    ],
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32",
        "gulp": "^3.9.1"
    },
    "dependencies": {
        "path-exists": "^3.0.0",
        "expand-home-dir": "^0.0.3",
        "glob": "^7.1.1"
    }
}
